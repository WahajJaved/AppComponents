<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".DisplayActivity">
	
	<Button
		android:id="@+id/alarm1time_set"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="132dp"
		android:text="Set Alarm 1 Time"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"></Button>
	
	<Button
		android:id="@+id/alarm2time_set"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="46dp"
		android:text="Set Alarm 2 Time"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/alarm1time_set" />
	
	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="36dp"
		android:layout_marginTop="76dp"
		android:text="Alarm 1 Time : "
		android:textSize="22sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/alarm2cancel" />
	
	<TextView
		android:id="@+id/textView3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="56dp"
		android:text="Alarm 2 Time : "
		android:textSize="22sp"
		app:layout_constraintEnd_toEndOf="@+id/textView2"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="@+id/textView2"
		app:layout_constraintTop_toBottomOf="@+id/textView2" />
	
	<TextView
		android:id="@+id/alarm1time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="48dp"
		android:text="Alarm Not Set"
		android:textSize="22sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="@+id/textView2"
		app:layout_constraintStart_toEndOf="@+id/textView2"
		app:layout_constraintTop_toTopOf="@+id/textView2"
		app:layout_constraintVertical_bias="0.0" />
	
	<TextView
		android:id="@+id/alarm2time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="48dp"
		android:text="Alarm Not Set"
		android:textSize="22sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="@+id/textView3"
		app:layout_constraintStart_toEndOf="@+id/textView3"
		app:layout_constraintTop_toTopOf="@+id/textView3"
		app:layout_constraintVertical_bias="0.0" />
	
	<Button
		android:id="@+id/alarm1cancel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="80dp"
		android:text="Cancel Alarm 1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/alarm2time_set" />
	
	<Button
		android:id="@+id/alarm2cancel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="31dp"
		android:text="Cancel Alarm 2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/alarm1cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>